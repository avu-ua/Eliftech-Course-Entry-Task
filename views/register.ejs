<h2>Registration for Event "<%= event.title %>"</h2>

<form action="/register" method="POST">
    <input type="hidden" name="event" value="<%= event.id %>">
    <label for="full-name">Full Name</label>
    <input type="text" id="full-name" name="name" value="<%= name %>" required>
    <label for="email">Email</label>
    <input type="email" id="email" name="email" value="<%= email %>" required>
    <label for="dob">Date of birth</label>
    <input type="date" id="dob" name="dob" value="<%= dob %>" required>
    <p>Where did you hear about this event?</p>
    <div>
        <input type="radio" id="social" name="source" value="Social media">
        <label for="social">Social media</label>
        <input type="radio" id="friends" name="source" value="Friends">
        <label for="friends">Friends</label>
        <input type="radio" id="myself" name="source" value="Found myself">
        <label for="myself">Found myself</label>
    </div>
    <a href="/">Cancel</a>
    <button type="submit">Register</button>
</form>